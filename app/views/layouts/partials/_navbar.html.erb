<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "ReAuction", root_url, class: "brand" %>
      <ul id="nav" class="nav">
        <li id="nav_home">
          <%= link_to "Home", root_url %>
        </li>
        <li id="nav_auctions">
          <%= link_to "Auctions", auctions_path %>
        </li>
        <li id="nav_account">
          <%= link_to "My Account", account_path %>
        </li>
        <li id="nav_help">
          <%= link_to "Help", "/help"%>
        </li>
        <% if current_user && current_user.admin?  %>
          <li class="">
            <a href="/admin">Admin</a>
          </li>
        <% end %>
      </ul>
      <% if current_user %>
        <ul id="nav_session" class="nav pull-right">
          <li>
            <a href="/logout">
              <i class="icon-off icon-white"></i>
              &nbsp;Log Out
            </a>
          </li>
        </ul>
      <% else %>
      <ul class="nav pull-right">
        <li>
          <%= link_to "or Sign Up", signup_path %>
        </li>
        </ul>
        <%= form_tag sessions_path, {class: 'navbar-search pull-right'} do %>
        <!-- <form class="navbar-search pull-right"> -->
          <!-- <li>
            <%= link_to "Log In", login_path %>
          </li> -->
          <!-- <input type="text" class="search-query span2" placeholder="Username/Email"> -->
          <%= text_field_tag :username, nil, {class: 'search-query span2', placeholder: "Username"} %>
          <!-- <input type="text" class="search-query span2" placeholder="Password"> -->
          <%= password_field_tag :password, nil, {class: 'search-query span2', placeholder: "Password"} %>
          <%= submit_tag "Login", class: 'search-query' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<!-- /navbar -->
