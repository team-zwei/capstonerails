<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "ReAuction", root_url, class: "brand" %>
      <ul id="nav" class="nav">
        <li id="nav_home" <%= "class='active'" if params[:controller] == "home" %> >
          <%= link_to "Home", root_url %>
        </li>
        <li id="nav_auctions" <%= "class='active'" if params[:controller] == "auctions" %> >
          <%= link_to "Auctions", auctions_path %>
        </li>
        <li id="nav_account" <%= "class='active'" if params[:controller] == "users" && params[:action] == "show" %> >
          <%= link_to "My Account", account_path %>
        </li>
        <li id="nav_help" <%= "class='active'" if params[:controller] == "help" %> >
          
          <a href="/help">
            Help
          </a>
        </li>
        <% if current_user && current_user.admin?  %>
          <li id="nav_admin" >
            <a href="/admin">
              Admin
            </a>
          </li>
        <% end %>
      </ul>
      <% if current_user %>
        <ul id="nav_session" class="nav pull-right">
          <li>
            <a href="/logout">
              <i class="icon-off icon-white"></i>
              &nbsp;Log Out
            </a>
          </li>
        </ul>
      <% else %>
      <ul id="nav_login_form" class="nav pull-right">
        <li>
          <%= link_to "or Sign Up", signup_path %>
        </li>
        </ul>
        <%= form_tag sessions_path, {class: 'navbar-search pull-right form-inline'} do %>
          <%= text_field_tag :username, nil, { id: "nav_username_input", class: 'span2', placeholder: "Username"} %>
          <!-- <input type="text" class="search-query span2" placeholder="Password"> -->
          <%= password_field_tag :password, nil, { id: "nav_password_input", class: 'span2', placeholder: "Password"} %>
          <%= submit_tag "Login", class: 'btn btn-primary', id: 'navbar_btn' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<!-- /navbar -->
