<%= stylesheet_link_tag "users", :media => "all" %>
<div class="row">
  <div class="span6 offset4">
    <h1>Sign Up</h1>
    <br>
    <%= form_for @user do |f| %>
      <div class="input-prepend">
        <%= f.label :firstname, "First Name", class: "add-on" %>
        <%= f.text_field :firstname, placeholder: "First Name" %>
      </div>
      <div class="input-prepend">
        <%= f.label :lastname, "Last Name", class: "add-on" %>
        <%= f.text_field :lastname, placeholder: "Last Name" %>
      </div>
      <div class="input-prepend">
        <%= f.label :email, class: "add-on" %>
        <%= f.text_field :email, placeholder: "Email Address" %>
      </div>
      <div class="input-prepend">
        <%= f.label :username, class: "add-on" %>
        <%= f.text_field :username, placeholder: "Username" %>
      </div>
      <div class="input-prepend">
        <%= f.label :password, class: "add-on" %>
        <%= f.password_field :password, placeholder: "Password" %>
      </div>
      <div class="input-prepend">
        <%= f.label :password_confirmation, "Confirm", class: "add-on" %>
        <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %>
      </div>
      <%= f.submit class: "btn btn-primary" %>  
    <% end %>
  </div>
</div>