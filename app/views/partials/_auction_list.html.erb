<%= stylesheet_link_tag "auction_list", :media => "all" %>
<%= render "partials/bid_modal" %>
<ul class="thumbnails">
	<% @auctions.each do |auction| %>
      <li id="auction_<%= auction.id %>" class="span3">
        <div class="thumbnail auction_thumbnail">
          <%= link_to image_tag("http://placehold.it/210x150", class: "auction_thumbnail_image", :border => 0 ), auction_path(auction.id) , :title => "title text" %>
          <div class="auction_thumbnail_caption">
            <h5 class="auction_thumbnail_title"><%= auction.name %></h5>
            <div class="auction_thumbnail_description">
              <p>
                <span class="auction_thumbnail_description_text">
                  <%= truncate(auction.description, length: 80, separator: ' ') %>
                </span> <%= link_to "More Info", auction_path(auction.id), class: "auction_thumbnail_more_info" %>
              </p>
              
            </div>
            <div class="alert alert-success" style="margin-bottom: -3px;">
              <h3 class="auction_thumbnail_price" data-current-price="<%= auction.get_current_price %>">
                <%= auction.get_current_price %>
              </h3>
              <h3 class="auction_thumbnail_time" data-time-remaining="<%= auction.get_remaining_time %>">
                <%= auction.get_time_string %>
              </h3>
              <div>
                <%= link_to "Bid Now!", new_auction_bid_path(auction), { id: "auction_bid_btn_#{auction.id}", class: "btn btn-large btn-success auction_thumbnail_bid_now" } %>
              </div>
            </div>
          </div>
        </div>
      </li>
  <% end %>
</ul>
<%= paginate @auctions %>
<%= javascript_include_tag "auction_list" %>
<%= javascript_include_tag "countdown" %>
