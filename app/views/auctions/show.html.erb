<%= javascript_include_tag "auctions_show" %>
<div class="row">
	<div class="span12">
		<h2><%= @auction.name %></h2>
	</div>
</div>
<div class="row">
	<div class="span6">
		<div id="myCarousel" class="carousel slide" style="width: 400px;">
			<div class="carousel-inner">
				<% @auction.image_urls.each  do |key, value| %>
					<div class="item<%= " active" if value.has_key?(:main) || key === @auction.image_urls.first[0] %>">
					  <img src="<%=value[:url]%>" alt="">
					  <div class="carousel-caption">
					    <h4><%= value[:title] %></h4>
					  </div>
					</div>
				<% end %>
			</div>
			<a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
			<a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
		</div>
		<ul class="thumbnails">	
			<% @auction.image_urls.each_with_index  do |image_url, index| %>
				<li class="span1">
				  <a href="#" class="thumbnail" data-image-number="<%= index + 1 %>">
				    <img src="<%= image_url[1][:thumbnail] || image_url[1][:url] %>" alt="">
				  </a>
				</li>
			<% end %>
		</ul>
	</div>
	<div class="span6">
		<p><%= @auction.description %></p>
		<dl class="dl-horizontal">
			<% @auction.data.each do |key, value| %>
				<dt><%= key.gsub(/\b\w/){$&.upcase} %></dt>
				<dd><%= value %></dd>
			<% end if @auction.data %>
		</dl>
	</div>
</div>