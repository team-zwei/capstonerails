<div class="row">
	<div class="span8 offset2">
		<%= form_tag password_resets_path, class: "form-horizontal",method: :post do %>
			<fieldset>
				<legend>Reset Password</legend>

				<div class="control-group">
					<%= label_tag :email, "Email Address", class: "control-label" %>
					<div class="controls">
						<%= text_field_tag :email, params[:email], placeholder: "Email Address", tabindex: "1"  %>
					</div>
				</div>
				<div class="form-actions">
					<%= submit_tag "Reset Password", class: "btn btn-danger btn-large", tabindex: "1" %>
				</div>
			</fieldset>
		<% end %>
	</div>
</div>